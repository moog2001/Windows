<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" stylesheets="@../../../styles/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.windows.PaymentWindowController">
   <children>
      <TableView fx:id="lvwPayments">
        <columns>
          <TableColumn fx:id="colReceiptNumber" prefWidth="100.0" text="Receipt #" />
          <TableColumn fx:id="colProcessedBy" prefWidth="140.0" text="Processed By" />
            <TableColumn fx:id="colPaymentDate" prefWidth="130.0" text="Payment Date" />
            <TableColumn fx:id="colProcessedFor" prefWidth="140.0" text="Processed For" />
            <TableColumn fx:id="colFirstDayOccupied" prefWidth="140.0" text="First Day Occupied" />
            <TableColumn fx:id="colLastDayOccupied" prefWidth="140.0" text="Last Day Occupied" />
            <TableColumn fx:id="colTotalNights" prefWidth="70.0" text="Total Nights" />
            <TableColumn fx:id="colPhoneUse" prefWidth="65.0" text="Phone Use" />
            <TableColumn fx:id="colAmtCharged" prefWidth="75.0" text="Amt Charged" />
            <TableColumn fx:id="colSubTotal" prefWidth="65.0" text="Sub-Total" />
            <TableColumn fx:id="colTaxRate" prefWidth="55.0" text="Tax Rate" />
            <TableColumn fx:id="colTaxAmount" prefWidth="75.0" text="Tax Amt" />
            <TableColumn fx:id="colTotalAmountPaid" prefWidth="65.0" text="Amt Paid" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnNewPayment" mnemonicParsing="false" onAction="#onClickNewPayment" text="New Payment" />
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#onClickClose" text="Close" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
